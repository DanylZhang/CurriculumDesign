@{
    ViewBag.Title = "学院通知";
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
}

<h2 class="mbx">我的信息 &gt; 学院通知</h2>
<div class="cztable">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr style="height: 25px" align="center">
            <th scope="col">序号</th>
            <th scope="col">类型</th>
            <th scope="col">标题</th>
            <th scope="col">内容</th>
            <th scope="col">添加时间</th>
            <th scope="col">状态</th>
        </tr>
        @if (ViewBag.CollegeMsg == null)
        {
            <tr align="center">
                <td colspan="13" align="left" style="color: Red; font-weight:bold;">暂无通知！</td>
            </tr>
        }
        else
        {
            foreach (string msg in ViewBag.CollegeMsg)
            {
                <tr align="center">
                    <td>@msg</td>
                    <td>@msg</td>
                    <td>@msg</td>
                    <td>@msg</td>
                    <td>@msg</td>
                    <td>@msg</td>
                </tr>
            }
        }
    </table>
</div>